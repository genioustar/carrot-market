generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       Int      @id @default(autoincrement())
  phone    Int?     @unique
  email    String?  @unique
  name     String
  avatar   String?
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  tokens   Token[]
}

model Token {
  id        Int      @id @default(autoincrement())
  payload   String   @unique //token을 뜻함
  user      User     @relation(fields: [userId], references: [id]) //userId는 ref id에서 User table에 있는 id 값이란걸 알 수 있음. 이를 통해서 token.user.name ==="Anonymous" 이게 됨!
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}
